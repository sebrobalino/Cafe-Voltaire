{
  "name": "cafe-voltaire",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:frontend\"",
    "dev:server": "ts-node-dev --respawn --transpile-only --project tsconfig.json server/server.ts",
    "dev:frontend": "vite --host",
    "build": "npm run build:server && npm run build:frontend",
    "build:server": "tsc",
    "build:frontend": "vite build",
    "start": "node dist/server.js",
    "seed:codes": "node firebase-scripts/seedEarnCodes.js",
    "seed:users": "node firebase-scripts/seedUsers.js"
  },

  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "firebase": "^12.6.0",
    "firebase-admin": "^13.6.0",
    "html5-qrcode": "^2.3.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  }
}
